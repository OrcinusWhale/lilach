<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="rootScroll" fitToWidth="true" prefHeight="720.0" prefWidth="960.0" vbarPolicy="ALWAYS" stylesheets="@catalogue.css" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CatalogueController">
  <content>
    <VBox fx:id="rootContainer" spacing="16" styleClass="catalogue-root">
      <children>
        <!-- Top toolbar -->
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="toolbar">
          <children>
            <Label text="Catalogue" styleClass="title-label">
              <font><Font size="32" /></font>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="backBtn" onAction="#goBack" text="â† Back" styleClass="secondary-btn" />
            <Button fx:id="cartBtn" onAction="#viewCart" text="ðŸ›’ Cart" styleClass="primary-btn" />
            <Button fx:id="addBtn" disable="true" onAction="#addItem" text="ï¼‹ Add Item" styleClass="accent-btn" />
            <Button fx:id="customBtn" onAction="#customOrder" text="Custom Order" styleClass="outline-btn" />
          </children>
        </HBox>

        <!-- Filter bar -->
        <HBox fx:id="filterBar" spacing="12" alignment="CENTER_LEFT" styleClass="filter-bar">
          <children>
            <Label text="Category:" />
            <ChoiceBox fx:id="categoryBox" prefWidth="160" />
            <Label text="Store:" />
            <ChoiceBox fx:id="storeBox" prefWidth="160" />
            <Button fx:id="filterBtn" text="Filter" onAction="#filter" styleClass="outline-btn" />
            <Label fx:id="loadingLabel" text="Loading..." styleClass="loading-label" />
          </children>
        </HBox>

        <!-- Items flow -->
        <FlowPane fx:id="cataloguePane" hgap="20" vgap="20" rowValignment="TOP" styleClass="items-flow">
          <padding><Insets top="8" bottom="32" left="8" right="8" /></padding>
        </FlowPane>
      </children>
      <padding>
        <Insets top="20" left="24" right="24" bottom="24" />
      </padding>
    </VBox>
  </content>
</ScrollPane>
