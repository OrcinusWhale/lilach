<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane onMousePressed="#loadItem" prefHeight="200.0" prefWidth="200.0" style="-fx-border-width: 1; -fx-border-color: black;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ItemController">
   <children>
      <Label fx:id="nameLabel" layoutX="4.0" layoutY="108.0" prefHeight="35.0" prefWidth="192.0" text="Flowers" wrapText="true">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label fx:id="typeLabel" layoutX="4.0" layoutY="143.0" prefHeight="22.0" prefWidth="192.0" text="Bouquet">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label fx:id="priceLabel" layoutX="2.0" layoutY="165.0" prefHeight="35.0" prefWidth="100.0" stylesheets="@strikethrough.css" text="price">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="100.0" layoutX="50.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="saleLabel" layoutX="100.0" layoutY="165.0" text="Sale" textFill="RED">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </children>
