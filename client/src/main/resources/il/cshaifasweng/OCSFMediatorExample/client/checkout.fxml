<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CheckoutController">
   <content>
      <VBox alignment="TOP_CENTER" spacing="20.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <!-- Header -->
            <Label text="Checkout" textFill="#2E8B57">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <!-- Navigation Button -->
            <Button fx:id="backToCartButton" mnemonicParsing="false" onAction="#goBackToCart" text="Back to Cart" />
            
            <!-- Order Summary Section -->
            <VBox spacing="10.0">
               <children>
                  <Label text="Order Summary" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                  <Label fx:id="orderSummaryLabel" text="Loading order details..." wrapText="true" />
                  
                  <!-- Price Details -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Total Amount:" />
                        <Label fx:id="totalAmountLabel" text="0.00" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Discount:" />
                        <Label fx:id="discountAmountLabel" text="0.00" textFill="#228B22" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Final Amount:" style="-fx-font-weight: bold;" />
                        <Label fx:id="finalAmountLabel" text="0.00" style="-fx-font-weight: bold;" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Order Details Section -->
            <VBox spacing="15.0">
               <children>
                  <Label text="Order Details" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                  
                  <!-- Order Type -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Order Type:" />
                        <ComboBox fx:id="orderTypeComboBox" />
                     </children>
                  </HBox>
                  
                  <!-- Order Priority -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Order Priority:" />
                        <ComboBox fx:id="orderPriorityComboBox" />
                     </children>
                  </HBox>
                  <Label fx:id="orderPriorityDescriptionLabel" text="" style="-fx-text-fill: #666; -fx-font-size: 12px;" wrapText="true" />
                  
                  <!-- Store Selection -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Store:" />
                        <ComboBox fx:id="storeComboBox" />
                     </children>
                  </HBox>
                  
                  <!-- Delivery Date -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Delivery Date:" />
                        <DatePicker fx:id="deliveryDatePicker" />
                     </children>
                  </HBox>
                  
                  <!-- Delivery Time -->
                  <HBox spacing="10.0">
                     <children>
                        <Label text="Delivery Time:" />
                        <ComboBox fx:id="deliveryTimeComboBox" />
                     </children>
                  </HBox>
                  
                  <!-- Greeting Card -->
                  <VBox spacing="5.0">
                     <children>
                        <CheckBox fx:id="greetingCardCheckBox" text="Add Greeting Card" />
                        <TextArea fx:id="greetingCardTextArea" promptText="Enter your greeting message..." prefRowCount="3" />
                     </children>
                  </VBox>
                  
                  <!-- Special Instructions -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Special Instructions:" />
                        <TextArea fx:id="specialInstructionsTextArea" promptText="Any special instructions..." prefRowCount="2" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Delivery Information Section -->
            <VBox spacing="15.0">
               <children>
                  <Label text="Delivery Information" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                  
                  <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                     </columnConstraints>
                     <children>
                        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                        <Label fx:id="deliveryAddressLabel" text="Delivery Address:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextField fx:id="deliveryAddressField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        
                        <Label fx:id="recipientNameLabel" text="Recipient Name:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                        <TextField fx:id="recipientNameField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        
                        <Label fx:id="recipientPhoneLabel" text="Recipient Phone:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                        <TextField fx:id="recipientPhoneField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
            
            <!-- Credit Card Section (visible only if no subscription) -->
            <VBox fx:id="creditCardSection" spacing="10.0">
               <children>
                  <Label text="Payment Information" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                  <GridPane hgap="10.0" vgap="10.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                     </columnConstraints>
                     <children>
                        <Label text="Card Number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="creditCardNumberField" promptText="16-digit number" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Expiry (MM/YY):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="expirationDateField" promptText="MM/YY" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="CCV:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="ccvField" promptText="3-4 digits" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
                  <Label fx:id="creditCardHintLabel" text="Enter payment details to proceed (required without subscription)." style="-fx-text-fill: #666; -fx-font-size: 12px;" wrapText="true" />
               </children>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="20.0" alignment="CENTER">
               <children>
                  <Button fx:id="placeOrderButton" mnemonicParsing="false" onAction="#placeOrder" text="Place Order" style="-fx-background-color: #228B22; -fx-text-fill: white;" />
               </children>
            </HBox>
            
            <!-- Error Message -->
            <Label fx:id="errorLabel" textFill="red" visible="false" wrapText="true" />
         </children>
      </VBox>
   </content>
</ScrollPane>
