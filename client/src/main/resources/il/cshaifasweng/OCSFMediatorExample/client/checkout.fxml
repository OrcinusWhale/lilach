<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CheckoutController">
   <content>
      <VBox prefHeight="700.0" prefWidth="780.0" spacing="20.0">
         <children>
            <Label alignment="CENTER" prefHeight="50.0" prefWidth="780.0" text="Checkout">
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            
            <Button fx:id="backToCartButton" mnemonicParsing="false" onAction="#goBackToCart" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="← Back to Cart" />
            
            <!-- Order Summary Section -->
            <VBox spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-border-color: #dee2e6; -fx-border-radius: 5;">
               <children>
                  <Label text="Order Summary:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="orderSummaryLabel" text="Loading..." wrapText="true">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  
                  <HBox alignment="CENTER_RIGHT" spacing="20.0">
                     <children>
                        <VBox alignment="CENTER_RIGHT" spacing="5.0">
                           <children>
                              <HBox spacing="10.0">
                                 <children>
                                    <Label text="Total Amount:" />
                                    <Label fx:id="totalAmountLabel" text="$0.00" />
                                 </children>
                              </HBox>
                              <HBox spacing="10.0">
                                 <children>
                                    <Label text="Discount:" />
                                    <Label fx:id="discountAmountLabel" text="$0.00" textFill="#28a745" />
                                 </children>
                              </HBox>
                              <HBox spacing="10.0">
                                 <children>
                                    <Label text="Final Amount:">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="finalAmountLabel" text="$0.00">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Order Details Section -->
            <VBox spacing="15.0">
               <children>
                  <Label text="Order Details:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Order Type:" />
                              <ComboBox fx:id="orderTypeComboBox" prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Store:" />
                              <ComboBox fx:id="storeComboBox" prefWidth="200.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Delivery/Pickup Date:" />
                              <DatePicker fx:id="deliveryDatePicker" prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Time:" />
                              <ComboBox fx:id="deliveryTimeComboBox" prefWidth="100.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label fx:id="deliveryAddressLabel" text="Delivery Address:" />
                        <TextField fx:id="deliveryAddressField" prefWidth="400.0" promptText="Enter delivery address" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Optional Details Section -->
            <VBox spacing="15.0">
               <children>
                  <Label text="Optional Details:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Greeting Card Message (optional):" />
                        <TextArea fx:id="greetingCardTextArea" maxHeight="80.0" prefHeight="80.0" promptText="Enter a message for the greeting card..." wrapText="true" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Special Instructions (optional):" />
                        <TextArea fx:id="specialInstructionsTextArea" maxHeight="80.0" prefHeight="80.0" promptText="Any special instructions for your order..." wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Action Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="placeOrderButton" mnemonicParsing="false" onAction="#placeOrder" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20;" text="Place Order" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
