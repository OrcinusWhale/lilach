<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.OrderHistoryController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBack" text="â† Back to Profile" />
            <Label text="My Order History" textFill="#2E8B57">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
      
      <!-- User Info -->
      <HBox spacing="10.0">
         <children>
            <Label text="Orders for:" />
            <Label fx:id="userNameLabel" text="Loading..." style="-fx-font-weight: bold;" />
         </children>
      </HBox>
      
      <!-- Orders List -->
      <ScrollPane fitToWidth="true" prefHeight="400.0">
         <content>
            <VBox fx:id="ordersContainer" spacing="15.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <!-- Loading message - will be replaced with actual orders -->
                  <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 30;">
                     <children>
                        <Label text="Loading your orders..." style="-fx-font-size: 16px;" />
                        <ProgressIndicator fx:id="loadingIndicator" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
      
      <!-- No Orders Message (initially hidden) -->
      <VBox fx:id="noOrdersPanel" alignment="CENTER" spacing="15.0" visible="false" managed="false" style="-fx-background-color: #fff3cd; -fx-background-radius: 10; -fx-padding: 30;">
         <children>
            <Label text="No Orders Found" style="-fx-font-size: 18px; -fx-font-weight: bold;" textFill="#856404" />
            <Label text="You haven't placed any orders yet." textFill="#6c757d" />
            <Button onAction="#goToCatalogue" text="Browse Catalogue" style="-fx-background-color: #2E8B57; -fx-text-fill: white;" />
         </children>
      </VBox>
      
      <!-- Error Message -->
      <Label fx:id="errorLabel" textFill="red" visible="false" wrapText="true" />
   </children>
</VBox>
