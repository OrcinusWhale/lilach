<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.UserDetailsController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label fx:id="welcomeLabel" text="Welcome, User!" textFill="#2E8B57">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Logout" />
         </children>
      </HBox>
      
      <HBox spacing="30.0" alignment="TOP_CENTER">
         <children>
            <!-- User Information Panel -->
            <VBox spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-padding: 20;" prefWidth="300.0">
               <children>
                  <Label text="Personal Information" textFill="#2E8B57">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <GridPane hgap="10.0" vgap="8.0">
                     <children>
                        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="fullNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label fx:id="phoneLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <Label fx:id="addressLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <Label fx:id="userRoleLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" textFill="#2E8B57">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        
                        <Label text="User Type:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                        <Label fx:id="userTypeLabel" GridPane.columnIndex="1" GridPane.rowIndex="6" textFill="#2E8B57">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        
                        <Label fx:id="storeInfoLabel" GridPane.columnIndex="0" GridPane.rowIndex="7" text="Store:" visible="false" />
                        <Label fx:id="storeNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="7" textFill="#2E8B57" visible="false">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </GridPane>
                  
                  <VBox spacing="10.0">
                     <children>
                        <Button fx:id="browseCatalogueButton" onAction="#handleBrowseCatalogue" prefWidth="200.0" style="-fx-background-color: #2E8B57; -fx-text-fill: white;" text="Browse Catalogue" />
                        <Button fx:id="reportsButton" onAction="#handleViewReports" prefWidth="200.0" style="-fx-background-color: #6f42c1; -fx-text-fill: white;" text="Reports"/>
                        <Button fx:id="viewOrdersButton" onAction="#handleViewOrders" prefWidth="200.0" style="-fx-background-color: #4169E1; -fx-text-fill: white;" text="View My Orders" />
                        <Button fx:id="submitComplaintButton" onAction="#handleSubmitComplaint" prefWidth="200.0" style="-fx-background-color: #fd7e14; -fx-text-fill: white;" text="Submit Complaint" />
                        <Button fx:id="employeeComplaintsButton" mnemonicParsing="false" onAction="#handleEmployeeComplaints" prefWidth="200.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Employee Complaints" visible="false" managed="false" />
                        <Button fx:id="adminPanelButton" onAction="#handleAdminPanel" prefWidth="200.0" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Admin Panel" visible="false" managed="false" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Subscription Panel -->
            <VBox fx:id="subscriptionPanel" spacing="15.0" style="-fx-background-color: #fff3cd; -fx-background-radius: 10; -fx-padding: 20;" prefWidth="350.0">
               <children>
                  <Label text="Subscription Management" textFill="#856404">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <VBox spacing="10.0">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Current Status:" />
                              <Label fx:id="subscriptionStatusLabel" textFill="#2E8B57" />
                           </children>
                        </HBox>
                        
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Subscription Type:" />
                              <Label fx:id="subscriptionTypeLabel" />
                           </children>
                        </HBox>
                        
                        <Label fx:id="subscriptionDatesLabel" visible="false" />
                     </children>
                  </VBox>
                  
                  <!-- Annual Subscription Setup Panel -->
                  <VBox fx:id="subscriptionSetupPanel" spacing="10.0" visible="false" managed="false">
                     <children>
                        <Label text="Annual Subscription Setup (100₪)" textFill="#856404">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label text="Get 10% discount on purchases above 50₪!" textFill="#6c757d" />
                        
                        <GridPane hgap="10.0" vgap="8.0">
                           <children>
                              <Label text="Tax Registration Number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <TextField fx:id="taxRegistrationField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200.0" promptText="Enter tax registration number" />
                              
                              <Label text="Customer ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <TextField fx:id="customerIdField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0" promptText="Enter customer ID" />
                              
                              <Label text="Credit Card Number:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <TextField fx:id="creditCardField" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200.0" promptText="Enter credit card number" />
                              
                              <Label text="Customer Name:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                              <TextField fx:id="customerNameField" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200.0" promptText="Enter full customer name" />
                           </children>
                        </GridPane>
                        
                        <Button fx:id="setupSubscriptionButton" onAction="#handleSetupSubscription" prefWidth="250.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Setup Annual Subscription (100₪)" />
                     </children>
                  </VBox>
                  
                  <!-- Subscription Benefits Panel (for active subscriptions) -->
                  <VBox fx:id="subscriptionBenefitsPanel" spacing="10.0" visible="false" managed="false">
                     <children>
                        <Label text="Subscription Benefits" textFill="#28a745">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Account Value:" />
                              <Label fx:id="accountValueLabel" textFill="#28a745">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Label text="✓ 10% discount on purchases above 50₪" textFill="#6c757d" />
                        <Label text="✓ Priority customer support" textFill="#6c757d" />
                        <Label text="✓ Exclusive offers and promotions" textFill="#6c757d" />
                     </children>
                  </VBox>
                  
                  <Label fx:id="subscriptionMessageLabel" textFill="GREEN" visible="false" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
